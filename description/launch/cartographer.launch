<launch>

    <arg name="launch_state" default="sim"/> 

    <arg name="base_frame"  default="base_link"/>
    <arg name="odom_frame"  default="odom"/>

    <node name="cartographer_node" pkg="cartographer_ros" type="cartographer_node" args="-configuration_directory $(find description)/config -configuration_basename caffeine.lua" output="screen">

        <remap from="imu" to="/imu/data" />
        <remap from="odom" to="/odom" />
        <remap from="scan_1" to="/cv/lane_detections_scan2"/>
        <remap from="scan_2" to="/scan_merged" />
        <!-- <remap from="points2" to="/cv/lane_detections_cloud" />  -->
        <remap from="fix" to="/gps/fix"/>
    </node>

    <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros" type="cartographer_occupancy_grid_node" args="-resolution 0.05" />


</launch>
