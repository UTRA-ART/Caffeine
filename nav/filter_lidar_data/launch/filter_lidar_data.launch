<launch>
    <!-- old method of filtering lidar -->
    <!-- <node 
        name="ignore_lidar" 
        pkg="filter_lidar_data" 
        type="ignore_lidar_node" 
        output="screen"
    >
        <param name="second_waypoint_latitude" value="43.6571667"/>
        <param name="second_waypoint_longitude" value="-79.3903788"/>
        <param name="third_waypoint_latitude" value="43.6571678"/>
        <param name="third_waypoint_longitude" value="-79.3902588"/>
    </node> -->
    <node
        name="dual_lidar_filter" 
        pkg="filter_lidar_data" 
        type="dual_lidar_filter_node" 
        output="screen"
    >
         <!-- unless this can track a constant defined in constants.xacro, make sure this is updated to be actual distance b/w lidars -->
        <param name="distance_to_second_lidar" value="0.2"/>
        <param name="max_theta_degrees" value="30" />
        <param name="main_topic" value="/scan" />
        <param name="upper_topic" value="/scan_upper" />
        <param name="out_topic" value="/scan_modified" />
        <param name="compare_lidar_time_tolerance_seconds" value="10" />

        <!-- upper lidar index range -->
        <!-- honestly the start index may not be required to change unless your indexing doesn't start at 0 -->
        <param name="upper_lidar_start_index" value="0" />
        <param name="upper_lidar_stop_index" value="1079" />
        <!-- total indices by lidar, completely useless since we have stop index above -->
        <!-- <param name="upper_lidar_count" value="1080" /> -->
        <!-- angular range total in degrees, ie 360 degrees if all angles  (not referring to start stop range above, but total of the upper lidar array) -->
        <param name="upper_lidar_angular_total_range" value='360' />
        <!-- main lidar angular range -->
        <param name="main_lidar_angular_total_range" value='270' />
    </node>
</launch>
