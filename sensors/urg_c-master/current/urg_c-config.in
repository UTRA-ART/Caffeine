#!/bin/sh

version=VERSION
prefix=PREFIX
includedir=${prefix}/include/urg_c
installlib=${prefix}/lib

usage="Usage: urg_c-config [--version] [--cflags] [--libs]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do

  case $1 in
    --version)
      echo "${version}"
      ;;
    --cflags)
      echo -I${includedir}
      ;;
    --libs)
      echo -lurg_c LIBS
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done
