<launch>
   <arg name="use_gui" default="true"/>
   <arg name="debug_mode" default="false"/>
   <arg name="world" default="walls"/>
   <arg name="spawn" default="start"/>

   <!-- IGVC worlds -->
   <arg name="world_file" value="$(find worlds)/gazebo_worlds/igvc_walls.world"  if="$(eval arg('world') == 'walls')"/>
   <arg name="world_file" value="$(find worlds)/gazebo_worlds/igvc_ramp.world"   if="$(eval arg('world') == 'ramp')"/>
   <arg name="world_file" value="$(find worlds)/gazebo_worlds/igvc_plain.world"  if="$(eval arg('world') == 'plain')"/>

   <!-- Default spawn at course start -->
   <arg name="x"     value="0"      if="$(eval arg('spawn') == 'start')"/>
   <arg name="y"     value="-21.5"  if="$(eval arg('spawn') == 'start')"/>
   <arg name="z"     value="0.3"    if="$(eval arg('spawn') == 'start')"/>
   <arg name="roll"  value="0"      if="$(eval arg('spawn') == 'start')"/>
   <arg name="pitch" value="0"      if="$(eval arg('spawn') == 'start')"/>
   <arg name="yaw"   value="3.14"   if="$(eval arg('spawn') == 'start')"/>

   <!-- Spawn at ramp -->
   <arg name="x"     value="-19.4"  if="$(eval arg('spawn') == 'ramp')"/>
   <arg name="y"     value="-12.7"  if="$(eval arg('spawn') == 'ramp')"/>
   <arg name="z"     value="0.24"   if="$(eval arg('spawn') == 'ramp')"/>
   <arg name="roll"  value="0"      if="$(eval arg('spawn') == 'ramp')"/>
   <arg name="pitch" value="0"      if="$(eval arg('spawn') == 'ramp')"/>
   <arg name="yaw"   value="0.986"  if="$(eval arg('spawn') == 'ramp')"/>

   <!-- Open a world in Gazebo -->
   <include file="$(find gazebo_ros)/launch/empty_world.launch">
      <arg name="world_name" value="$(arg world_file)"/>
      
      <arg name="paused" value="false"/>
      <arg name="verbose" value="false"/>
      <arg name="use_sim_time" value="true"/>

      <arg name="gui" value="$(arg use_gui)"/>
      <arg name="gui_required" value="$(arg use_gui)"/>

      <arg name="debug" value="$(arg debug_mode)"/>
      <arg name="server_required" value="$(arg debug_mode)"/>
   </include>

   <!-- Parse URDF with xacro -->
   <param name="robot_description" command="xacro '$(find description)/urdf/caffeine.urdf.xacro'"/>

   <!-- Spawn Caffeine in Gazebo -->
   <node name="spawn_caffeine" pkg="gazebo_ros" type="spawn_model"
      args="-param robot_description
            -urdf -model caffeine
            -x $(arg x) -y $(arg y) -z $(arg z)
            -R $(arg roll) -P $(arg pitch) -Y $(arg yaw)" />

   <!-- Set up TF Tree -->
   <include file="$(find description)/launch/setup_tf_tree.launch">
      <arg name="robot" value="caffeine"/>
   </include>
</launch>

