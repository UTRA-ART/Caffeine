<launch>
   <arg name="model" default = "caffeine"/>
   <arg name="gui" default="False"/>
   <param name="robot_description" command="$(find xacro)/xacro $(find description)/urdf/$(arg model).urdf.xacro"/>

   <param name="use_gui" value="$(arg gui)"/>
   <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"/>
   <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
   <node name="rviz" pkg="rviz" type="rviz" args="-d $(find description)/rviz/$(arg model).rviz"/>
</launch>

